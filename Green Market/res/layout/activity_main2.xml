<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patterno"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtPercentage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarflatter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Initializing..."
        android:fontFamily="corbel"
        android:textColor="#8e8e8e"
        android:textSize="20dp"
        android:textStyle="bold"
         />

    <ProgressBar
        android:id="@+id/progressBarflatter"
        style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		
		android:layout_height="wrap_content"
	
		android:layout_centerInParent="true"/>
    
    
    <ImageView
        android:id="@+id/imageview_flatter"
        
		android:layout_width="wrap_content"
		android:src="@drawable/blue_box"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:layout_centerInParent="true"/>
    
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
     
        android:textStyle="bold|italic"
        android:minHeight="50dp"
        android:background="@drawable/button_rounded_corner"
        android:visibility="gone"
        android:id="@+id/continu"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>
    
</RelativeLayout>