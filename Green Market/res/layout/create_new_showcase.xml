<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
 
    <ScrollView 
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
        
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    android:weightSum="2"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_weight="1.5"   
       	android:layout_width="match_parent"
       	android:layout_height="0dp">
       	    
       	    <com.integra.dealcaller.RecyclingImageView 
       	        android:layout_width="match_parent"
       	        android:layout_height="250dp"
       	        android:background="#ffffff"
       	        android:id="@+id/BigImage"
       	        android:scaleType="fitCenter"
       	        android:contentDescription="Main Image"
       	        android:padding="1dp"
				app:riv_corner_radius="30dip"
      			app:riv_border_width="3dip"
      			app:riv_oval="false"
      			app:riv_border_color="#ffffff"/>
			
			
			<ImageView
			    android:id="@+id/capture_photo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/BigImage"
			    android:layout_alignParentLeft="true"
			    android:layout_margin="8dp"
			    android:background="@drawable/button_rounded_corner"
			    android:clickable="true"
			    android:contentDescription="image"
			    android:padding="4dp"
			    android:visibility="gone"
			    android:scaleType="fitXY"
			    android:src="@drawable/ic_action_camera2" />

			<ImageView
			    android:id="@+id/button_to_choose"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/capture_photo"
			    android:layout_alignParentRight="true"
			    android:layout_margin="8dp"
			    android:layout_marginRight="14dp"
			    android:clickable="true"
			    android:background="@drawable/button_rounded_corner"
			    android:contentDescription="image"
			    android:padding="4dp"
			    android:scaleType="fitXY"
			    android:src="@drawable/white_add2" />

	</RelativeLayout>
	    

	<LinearLayout
		android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:layout_marginTop="15dp"
     	android:orientation="vertical"
     	android:focusableInTouchMode="true" 
     	>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Email"
            android:paddingTop="6dp"
            android:id="@+id/saysomething_email"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
            
            android:lines="1"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Password"
            android:paddingTop="6dp"
            android:id="@+id/saysomething_pass"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
       
            android:lines="1"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Retype Password"
            android:paddingTop="6dp"
            android:id="@+id/saysomething_veri"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
         
            android:lines="1"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Phone number"
            android:paddingTop="6dp"
            android:id="@+id/saysomething_fon"
            android:focusable="true"
            android:inputType="number"
            android:lines="1"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
           
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
        
       <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Business name"
            android:paddingTop="6dp"
            android:id="@+id/saysomething"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
            android:lines="1"
      
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
       
       <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Description of Services"
            android:minHeight="80dp"
            android:paddingTop="6dp"
            android:id="@+id/saysomething2"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
          
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
       
       <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Location or physical address"
            android:paddingTop="6dp"
            android:id="@+id/saysomething3"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:padding="10dp"
            android:lines="2"
        
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
       
         <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    >
    
    <!-- Button Create Product -->
    <Button android:id="@+id/btnCreateProduct"
        android:layout_width="fill_parent"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_weight="0.11"
        android:textSize="14sp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Cancel"/>
    
    <!-- Button Create Product -->
    <Button android:id="@+id/btnCreateProduct2"
        android:layout_width="fill_parent"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_weight="0.11"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
     	
        android:text="Create Store"/>
    
  </LinearLayout> 
        
	</LinearLayout>
	
	
	<ProgressBar
        android:id="@+id/progressinsidepage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>
	
	 
     
</LinearLayout>
</ScrollView>

    

    </RelativeLayout>
