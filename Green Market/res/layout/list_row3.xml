<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:padding="20dp">
 
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/vview3"
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:src="@drawable/null_profile"
         />
 
    <!-- Movie Title -->
 
    <!-- Rating -->
     
    <!-- Genre -->

    <TextView
        android:id="@+id/genre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title3"
        android:layout_below="@+id/rating3"
        android:layout_marginStart="10dp"
        android:background="#7f000000"
        android:layout_marginBottom="36dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/title"
        android:textStyle="bold" />
 
    <!-- Release Year -->
    <TextView
        android:id="@+id/releaseYear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonfollow3"
        android:layout_alignParentRight="true"
        android:textColor="#98db40"
        android:textSize="@dimen/year" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vview3"
        android:layout_alignLeft="@+id/vview3"
        android:layout_alignStart="@+id/vview3"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="10dp"
        android:background="#7f000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title3"
        android:layout_alignTop="@+id/title3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:background="#7f000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonfollow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vview3"
        android:layout_alignRight="@+id/vview3"
        android:background="#00000000"
        android:src="@drawable/follow_icon" />
 
</RelativeLayout>