<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_layer"
  
    android:padding="8dp" >

    <!-- Thumbnail Image -->

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/null_profile" />

    <!-- Movie Title -->

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail4"
        android:layout_toRightOf="@+id/thumbnail4"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <!-- Rating -->

    <TextView
        android:id="@+id/rating4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title4"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail4"
        android:textSize="@dimen/rating" />

    <!-- Genre -->

    <TextView
        android:id="@+id/genre4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating4"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail4"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />

    <!-- Release Year -->

    <TextView
        android:id="@+id/releaseYear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#98db40"
        android:textSize="@dimen/year" />

</RelativeLayout>