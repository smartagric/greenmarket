<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >
 
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail7"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:src="@drawable/null_profile"
         />
 
    <!-- Movie Title -->
    <TextView
        android:id="@+id/title7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/thumbnail7"
        android:layout_below="@+id/thumbnail7"
        android:textSize="@dimen/title"
        android:lines="1"
        android:layout_marginTop="1dip"
        android:textStyle="bold" />
 
    <!-- Rating -->

    <TextView
        android:id="@+id/rating7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/thumbnail7"
        android:layout_below="@id/title7"
        android:lines="1"
        android:layout_marginTop="1dip"
        android:textSize="@dimen/rating" />
     
    <!-- Genre -->

    <TextView
        android:id="@+id/genre7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rating7"
        android:layout_below="@id/rating7"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />
 
    <!-- Release Year -->
    <TextView
        android:id="@+id/releaseYear7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#98db40"
        android:lines="1"
        android:textSize="@dimen/year" 
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/imageButtonfollow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/thumbnail7"
        android:layout_below="@+id/genre7"
        android:layout_marginTop="5dp"
        android:background="#f4f4f4"
        android:text="Play" />
 
</RelativeLayout>