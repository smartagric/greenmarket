<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
 
    <ScrollView 
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
        
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hmkcode.nearpime.activities.NewPostActivity"
    android:weightSum="2"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_weight="1.5"   
       	android:layout_width="match_parent"
       	android:layout_height="0dp">
       	    
       	    <ImageView 
       	        android:layout_width="match_parent"
       	        android:layout_height="250dp"
       	        android:background="#e8ebf2"
       	        android:id="@+id/BigImage3"
       	        android:scaleType="fitCenter"
       	        android:contentDescription="Main Image"
       	        android:padding="1dp"/>
			
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BigImage3"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/feed_item_profile_info_padd" >

            <ImageView
                android:id="@+id/selected_image13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.11"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/selected_image23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.11"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/selected_image33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.11"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/selected_image43"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.11"
                android:scaleType="fitCenter" />

                <ImageView
            android:id="@+id/selected_image53"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="-1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.11"
            android:scaleType="fitCenter" />
                
                
            </LinearLayout>
			<ImageView
			    android:id="@+id/capture_photooo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/BigImage3"
			    android:layout_alignParentLeft="true"
			    android:layout_margin="8dp"
			    android:background="@drawable/button_rounded_corner"
			    android:clickable="true"
			    android:contentDescription="image"
			    android:padding="4dp"
			    android:scaleType="fitXY"
			    android:src="@drawable/ic_action_camera2" />

			<ImageView
			    android:id="@+id/button_to_choose3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/capture_photooo"
			    android:layout_alignParentRight="true"
			    android:layout_margin="8dp"
			    android:layout_marginRight="14dp"
			    android:clickable="true"
			    android:contentDescription="image"
			    android:padding="4dp"
			    android:scaleType="fitXY"
			    android:src="@drawable/ic_action_add_to_queue" />

	</RelativeLayout>
	    

	<RelativeLayout
		android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_marginTop="15dp"
     	>
        
       <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="Say Something about this photo..."
            android:paddingTop="6dp"
            android:id="@+id/saysomething3"
            android:focusableInTouchMode="true" 
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"/>
	</RelativeLayout>
	
	
	<ProgressBar
        android:id="@+id/progressinside_new_post"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>
	
	 
     
</LinearLayout>
</ScrollView>

    

    </RelativeLayout>
