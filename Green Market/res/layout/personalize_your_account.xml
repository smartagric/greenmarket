<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
    
    
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:background="#ffffff"
            android:orientation="horizontal" >
            
            
            <ImageView
            android:id="@+id/coverfotory"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/null_cover" />
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pocketPhotoeditry"
        android:background="#ffffff"
        android:orientation="vertical" >
        
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Full name:"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/full_namery"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.63"
                android:background="#f4f4f4"
                android:ems="10"
                android:fontFamily="Corbel"
                android:hint="add your full name"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Username:"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/usernamery"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.63"
                android:background="#f4f4f4"
                android:ems="10"
                android:fontFamily="Corbel"
                android:hint="this name will be seen by others"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textSize="12sp"
                 />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Residence:"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/residencery"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.63"
                android:background="#f4f4f4"
                android:ems="10"
                android:paddingLeft="8dp"
                android:fontFamily="Corbel"
                android:hint="where do you stay?"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="12sp"
                 />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Phone number:"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/codery"
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="-1dip"
                android:background="#f4f4f4"
                android:ems="10"

                android:fontFamily="Corbel"
                android:hint="code"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textSize="12sp" >

               />
            </EditText>

            <EditText
                android:id="@+id/phone_numberry"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.10"
                android:background="#f4f4f4"
                android:ems="10"
                android:fontFamily="Corbel"
                android:hint="add your contact"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:text="Current School:"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/schoolry"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.63"
                android:background="#f4f4f4"
                android:ems="10"
                android:paddingLeft="8dp"
                android:fontFamily="Corbel"
                android:hint="leave blank if none"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="12sp"
                 />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:text="Current Job:"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/settings_label"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" >

            <EditText
                android:id="@+id/workry"
                android:layout_width="146dp"
                android:layout_height="42dp"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.63"
                android:background="#f4f4f4"
                android:ems="10"
                android:paddingLeft="8dp"
                android:fontFamily="Corbel"
                android:hint="leave blank if none"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="12sp"
                 />
        </LinearLayout>
        
        <ProgressBar
        android:id="@+id/progresspersonalize"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" >

            <Button
                android:id="@+id/ButtonSavery"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-2dip"
                android:layout_marginLeft="-4dip"
                android:layout_marginRight="-4dip"
                android:layout_marginTop="-1dip"
                android:layout_weight="0.11"
                android:background="#fafafa"
                android:text="Save and continue" />
        </LinearLayout>
    </LinearLayout>

    <com.integra.dealcaller.RoundedImageView
        android:id="@+id/pocketPhotoeditry"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/null_profile" />
    
    </RelativeLayout>

</ScrollView>