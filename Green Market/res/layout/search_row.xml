<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@color/feed_bg"
    android:padding="8dp" >
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner" 
        android:orientation="horizontal"
        android:padding="8dp" >
        
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnailsearch"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/null_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />
 
    <!-- Movie Title -->
    <TextView
        android:id="@+id/titlesearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailsearch"
        android:layout_toRightOf="@+id/thumbnailsearch"
        android:textSize="@dimen/title"
        android:textStyle="bold" />
 
    <!-- Rating -->
    <TextView
        android:id="@+id/ratingsearch"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlesearch"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnailsearch"
        android:textSize="@dimen/rating" />
     
    <!-- Genre -->
    <TextView
        android:id="@+id/genresearch"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingsearch"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnailsearch"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />
 
    <!-- Release Year -->
    <TextView
        android:id="@+id/releaseYearsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/body_background_green"
        android:textSize="@dimen/year" />

    <ImageButton
        android:id="@+id/imageButton1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_action_add_person" />
    
    </RelativeLayout>
 
</RelativeLayout>