<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

<LinearLayout 
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    android:weightSum="2"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_weight="1.5"
	    android:id="@+id/rin"   
	    android:layout_marginTop="30dp"
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content">

	    <TextView
	        android:id="@+id/link_to_be_shared2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:hint="link to be shared"
	        android:visibility="gone"
	        android:textStyle="bold"
	        android:linksClickable="true"
			android:textColorLink="@color/link"
	        android:layout_marginBottom="10dp"
	        android:paddingLeft="@dimen/feed_item_status_pad_left_right"
	        android:paddingRight="@dimen/feed_item_status_pad_left_right"
	         />

	</RelativeLayout>

	<TextView
	    android:id="@+id/link_to_be_shared"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.5"
	    android:hint="link body"
	    android:visibility="gone"
	    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
	    android:paddingRight="@dimen/feed_item_status_pad_left_right"
	    android:textColorLink="@color/link" />

	<RelativeLayout
		android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_weight="0.25"
     	android:layout_marginBottom="20dp"
     	android:layout_marginTop="20dp"
     	>
        
       <EditText
           android:id="@+id/say2receiver"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentBottom="true"
           android:background="@drawable/textview_border"
           android:gravity="center_vertical"
           android:hint="Say Something about this link..."
           android:paddingBottom="8dp"
           android:minHeight="50dp"
           android:padding="15dp"
           android:layout_margin="10dp"
           android:paddingTop="6dp"
           android:textSize="14sp" />
	</RelativeLayout>
	
	<ProgressBar
        android:id="@+id/progresslinkreceiver"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>
	
	 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:id="@+id/lin">
    
     </LinearLayout>
</LinearLayout>
</ScrollView>
