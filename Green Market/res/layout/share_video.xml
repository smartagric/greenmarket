<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

<LinearLayout 
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    android:weightSum="2"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_weight="1.5"
	    android:id="@+id/rin"   
       	android:layout_width="match_parent"
       	android:layout_height="250dp">
       	    
	    
	   
    		
	    <VideoView
        	android:id="@+id/BigVideo"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="#00000000"
        	android:layout_gravity="center" />
       	 
       	 

       	    <ImageView
       	        android:layout_width="wrap_content"
       	        android:layout_height="wrap_content"
       	        android:layout_centerHorizontal="true"
       	        android:layout_centerVertical="true"
       	        android:layout_margin="8dp"
       	       
       	        android:clickable="true"
       	        android:id="@+id/button_to_choosevideo"
       	        android:contentDescription="image"
       	        android:padding="4dp"
       	        android:scaleType="fitXY"
       	        android:src="@drawable/add" />
       	    
       	    
       	    <ImageView
       	        android:layout_width="wrap_content"
       	        android:id="@+id/capture_video"
       	        android:layout_height="wrap_content"
       	        android:layout_alignParentBottom="true"
       	        android:layout_alignParentLeft="true"
       	        android:layout_margin="8dp"
       	        android:background="@drawable/button_rounded_corner"
       	        android:clickable="true"
       	        android:contentDescription="image"
       	        android:padding="4dp"
       	        android:scaleType="fitXY"
       	        android:src="@drawable/ic_action_camera2" />

	</RelativeLayout>
	    

	<RelativeLayout
		android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_weight="0.25"
     	android:layout_marginBottom="20dp"
     	android:layout_marginTop="20dp"
     	>
        
       <EditText
           android:id="@+id/say2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentBottom="true"
           android:layout_toLeftOf="@+id/click_to_edit"
           android:background="@drawable/textview_border"
           android:gravity="center_vertical"
           android:hint="Say Something about this photo..."
           android:paddingBottom="8dp"
           android:paddingLeft="12dp"
           android:paddingTop="6dp"
           android:textSize="14sp" />
	</RelativeLayout>
	
	<ProgressBar
        android:id="@+id/progressinsidepage2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>
	
	 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:id="@+id/lin">
    
     </LinearLayout>
</LinearLayout>
</ScrollView>
